#gallery

  & > div
    margin: 0
    width: 100%
    height: 100%

  div.item
    min-width: 1px
    min-height: 1px
    // width: 100%
    // height: 100%
    max-width: 1600px
    max-height: 1200px
    position: relative

    & > img, & > canvas
      max-width: 100%
      max-height: 100%
      min-width: 500px
      min-height: 500px
      margin: 0
      cursor: pointer

    & > .shadow
      width: 100%
      height: 100%
      position: absolute
      top: 0
      left: 0
      background-color: white
      opacity: .6
    

  h1
    margin: 1em 5em
    padding: 0.25em 1em
    font-size: 300%
    height: 10%

  input[type=file]
    display: none