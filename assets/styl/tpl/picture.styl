
// admin part
#dynamic
  & > div.picture
    //background: linear-gradient(top, #3B3B3B, #1F1F1F)
  
  div.tools
    width: 100%
    height: 25px
    overflow: auto
    position: absolute
    top: 0
    left: 0
    right: 0
    transition: 0.6s height ease-in

    & > div
      width: 100%
      height: 100%
      overflow: hidden
      background: rgba(225,225,225,.8)

    &.fullheight
      height: 100%

    form.create-bucket
      display: block
      height: 100%
      width: 75%
      margin: 10% auto 10% auto

      & > div 
        margin: 0

  div.progressbar.total
    background-color: green
    position: absolute
    bottom: 0
    left: 0
    height: 5px
    transition: 0.3s width ease-in
    transition: 0.8s height ease-in

  div.upload
    width: 100%
    height: 100%

    & > div
      height: 100%

    div.drop
      width: 60%
      margin: 10em auto -10em auto

      input
        display: none

    div.list

      ul.pictures
        background-color: black

        li.item
          position: relative
          overflow: hidden

          .image 
            background: center center #fff no-repeat;
            background-size: 100% 100%
            background-size: cover
            height: 100%
            width: 100%

          .meta
            position: absolute
            bottom: 0.3em
            left: 0
            right: 0
            overflow: hidden
            color: white
            text-shadow: 1px 1px 0 black
            padding: 5px 5px 10px 5px

          .admin
            text-align: left
            position: absolute
            top: 15em
            left: 2em
            width: 20em
            background: linear-gradient(top, #3781E8, darken(#3781E8, 15))
            padding: 0.3em;
            color: white;
            
            a 
              color: white

            .element
              margin-bottom: 1em;

              p.add
                cursor: pointer

            .description
              overflow: ellipsis

            .tags
              
              li
                display: inline-block
                margin-right: 5px
