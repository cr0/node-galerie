
// admin part
#dynamic
  
  & > div.picture
    //background: linear-gradient(top, #3B3B3B, #1F1F1F)
  
  div.tools
    background: linear-gradient(top, #50e9c5, #5fc9fb)
    width: 100%
    overflow: hidden
    padding: .2em 2em
    position: absolute
    top: 0
    left: 0
    right: 0
    transition: 0.6s height

    div.pair.create-collection
      display: none
      width: 75%

  div.collections
    width: 100%
    background: white
    display: none

  div.upload
    width: 100%
    height: 100%

    & > div
      height: 100%

    div.drop
      width: 60%
      margin: 10em auto -10em auto

      input
        display: none

    div.list
      overflow-x: auto
      overflow-y: hidden
      height: 100%

      .row
        margin: 0
        white-space: nowrap
        display: inline-block

        .row-item
          float: none
          position: relative
          display: inline-block
          transition: opacity .3s ease-out
          opacity: 0
          margin-top: -3px
          //margin: 8px 8px 0 0
          //
          &.failed
            .shadow
              background-color: #ef4904
          

          &:first-child
            //margin-left: 8px

          .preview
            line-height: 0

            .shadow
              width: 100%
              height: 100%
              position: absolute
              top: 0
              left: 0
              background-color: white
              opacity: .6
              transition: 0.6s height

          .meta
            position: absolute
            bottom: 0
            left: 0
            right: 0
            overflow: hidden
            color: white
            text-shadow: 1px 1px 0 black
            padding: 5px 5px 10px 5px

            .description
              overflow: ellipsis
