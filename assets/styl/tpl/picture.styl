
// admin part
#gallery
  
  div.tools
    width: 100%
    height: 25px
    overflow: auto
    position: absolute
    top: 0
    left: 0
    right: 0
    transition: 0.6s height ease-in

    & > div
      width: 100%
      height: 100%
      overflow: hidden
      background: rgba(225,225,225,.8)

    &.fullheight
      height: 100%

    form.create-bucket
      display: block
      height: 100%
      width: 75%
      margin: 10% auto 10% auto

      & > div 
        margin: 0

  div.upload
    width: 100%
    height: 100%

    & > div
      height: 100%

    div.drop
      width: 39em
      margin: 10em auto -10em auto

      input
        display: none

    div.progressbar.total
      background-color: green
      position: absolute
      bottom: 0
      left: 0
      height: 5px
      transition: 0.3s width ease-in
      transition: 0.8s height ease-in

  div.pictures, div.upload
    display: none

  div.pictures

    ul.pictures

      li.item
        position: relative
        overflow: hidden

        &.add
          height: 100%
          width: 90%
          text-align: center
          margin-top: 15%

        .image 
          background: center center #fff no-repeat;
          background-size: 100% 100%
          background-size: cover
          height: 100%
          width: 100%

        .meta
          position: absolute
          bottom: 0.3em
          left: 0
          right: 0
          overflow: hidden
          color: white
          text-shadow: 1px 1px 0 black
          padding: 5px 5px 10px 5px

          .description
            overflow: ellipsis

        .admin
          text-align: left
          position: absolute
          top: 5em
          left: 0
          color: white
          width: 100%
          
          a 
            color: black

          ul.toolbar
            margin-left: 1em

            & > li
              margin-bottom: 1em
              margin-right: 0.5em
              display: inline-block

              .icon
                cursor: pointer
                color: rgba(255,255,255,1)
                text-shadow: 1px 1px 0 rgba(198,198,198,1)
                font-size: 3em

                &.missing
                  color: rgba(255, 58, 45, 1)

              .badge
                font-size: 0.3em

                &.entypo
                  font-size: 0.5em

              .content
                position: absolute
                opacity: 0
                transition: opacity 0.5s ease-out, visibility 0.5s ease-out
                visibility: hidden
                background-color: rgba(255,255,255,.75)
                border-radius: 2px
                color: black
                min-width: 20em
                margin-top: 1.5em
                padding: 0.5em

                &:after
                  bottom: 100%
                  border: solid transparent
                  content: " "
                  height: 0
                  width: 0
                  position: absolute
                  pointer-events: none
                  border-color: rgba(255,255,255,0)
                  border-bottom-color: rgba(255,255,255,.75)
                  border-width: 8px
                  left: 13px
                  margin-left: -8px

                &.active 
                  visibility:visible;
                  opacity: 1
              
