
// admin part
#dynamic
  
  & > div.picture
    //background: linear-gradient(top, #3B3B3B, #1F1F1F)
  
  div.tools
    background: linear-gradient(top, #50e9c5, #5fc9fb)
    width: 100%
    padding: 1em 2em

    div.pair.create-collection
      display: none
      width: 75%

  div.collections
    width: 100%
    background: white
    display: none

  div.upload
    width: 100%

    div.drop
      width: 60%
      margin: 10em auto -10em auto

      input
        display: none

    div.list
      overflow-y: auto

      .row
        margin: 0
        margin-bottom: -3px
        white-space: nowrap
        display: block

        .row-item
          float: none
          position: relative
          display: inline-block
          transition: opacity .3s ease-out
          opacity: 0
          margin: 8px 8px 0 0

          &:first-child
            margin-left: 8px

          .preview
            line-height: 0

            .shadow
              width: 100%
              height: 100%
              position: absolute
              top: 0
              left: 0
              background-color: white
              opacity: .6

          .meta
            position: absolute
            bottom: 0
            left: 0
            right: 0
            overflow: hidden
            color: white
            text-shadow: 1px 1px 0 black
            padding: 5px 3px 10px 3px

            .description
              overflow: ellipsis
