@import "nib"
global-reset()

@import "vendor/hint.css"

@import "_variables"

@import "common/animation"
@import "common/buttons"
@import "common/forms"

@import "structure/header"
@import "structure/content"
@import "structure/footer"
@import "structure/horizontal-scroll"

@import "tpl/login"
@import "tpl/search"
@import "tpl/gallery"

*
  box-sizing: border-box

  &:focus
    outline: 0

:root
  height: 100%

body
  width: 90%
  margin: 50px auto
  
  font: 1em "Helvetica Neue", Arial, sans-serif
  font-weight: 100
  color: $text-color

  background-color: $background-color
  overflow: hidden

@media (min-width: 500px) and (max-width: 750px)
  body
    width: 500px

a
  color: $link-color
  text-decoration: none
  font-weight: 200

a.button
  color: #00B7FF

h1
  font-size: 2em

h2
  font-size: 1.5em
  font-weight: 100

h3
  font-size: 1.15em
  font-weight: 200

p
  margin-top: 1%

pre
  font: 1em Consolas, "Courier New", serif
  margin-top: 0.5%
  margin-bottom: 0.5%
  border-left: 2px solid
  padding-left: 1%

.clearfix
  clearfix()