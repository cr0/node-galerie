@import "nib"

@import "_variables"

@import "header"
@import "content"
@import "footer"

@import "tpl/search"

global-reset()

*
  box-sizing: border-box

:root
  height: 100%

body
  width: 100%
  
  font: 100% "Helvetica Neue", Arial, sans-serif
  color: $text-color

  background-color: $background-color
  background: url("../img/background.jpg") center center no-repeat fixed
  background-size: cover

a
  color: white
  text-decoration: none

a.button
  color: #00B7FF

h1
  font-size: 150%

h2
  font-size: 130%
  font-weight: 100

h3
  font-size: 110%
  font-weight: 200

p
  margin-top: 1%

pre
  font: 100% Consolas, "Courier New", serif
  margin-top: 0.5%
  margin-bottom: 0.5%
  border-left: 2px solid
  padding-left: 1%