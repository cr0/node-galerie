footer
  font-size: 80%
  font-weight: 400 !important
  z-index: 999
  position: fixed
  bottom: 0
  left: 0
  width: 100%

  ul
    width: 80%
    margin: 0 auto
    display: block

    li
      padding: 0.25em
      float: left
      //background-color: rgba(0, 0, 0, .7)
      a
        display: block
        padding-right: 1em

      span.user
        margin-right: 0.5em
        &.reputation
          color: rgba(40,40,40,1)
          &:before
            content: 'rep: '


    li:first-child
      a
        color: gray !important

@media (min-width: 500px) and (max-width: 750px)
  footer
    ul
      width: 500px

@media (max-width: 500px)
  footer
    ul
      width: 100%