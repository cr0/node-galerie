
@import "nib"
@import "_variables"


body
  margin: 50px auto
  width: 500px

p.hint
  margin-bottom: 2em

div.image
  position: relative
  margin-right: 40px
  width: 150px
  height: 150px
  display: inline-block
  overflow: hidden
  vertical-align: top;

  img
    width: 100%
    height: 100%

  p
    width: 100%
    display: inline-block
    position: absolute
    left: 0
    bottom: -60px
    padding: 2px
    background-color: rgba(45,45,45,.8)
    color: white
    transition: bottom 0.6s

  &:hover
    p
      bottom: 0

form
  display: inline-block
  vertical-align: top;
  width: 60%

  div.pair
    width: 100%

    input
      color: lighten($text-color, 15)
      width: 100%
      float: right
      font-size: 140%
      background-color: white
      border: 0
      padding: 5px
      transition: background-color 0.6s

      &:hover
        background-color: rgb(206, 227, 242)

      &:focus:not(readonly)
        color: $text-color

  button
    margin-top: 1em
    font-size: 140%
    width: 100%

