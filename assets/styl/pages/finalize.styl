@import "nib"

body
  background: linear-gradient(top, lighten(#80B3FF, 80%), #80B3FF);

p.info
  margin-bottom: 2em

div.image
  position: relative
  margin-right: 40px
  width: 150px
  height: 150px
  display: inline-block
  overflow: hidden
  vertical-align: top;

  img
    width: 100%
    height: 100%

  p
    width: 100%
    display: inline-block
    position: absolute
    left: 0
    bottom: -60px
    padding: 2px
    background-color: rgba(45,45,45,.8)
    color: white
    transition: bottom 0.6s

  &:hover
    p
      bottom: 0

form
  display: inline-block
  vertical-align: top;
  width: 60%

  div.pair
    width: 100%

    input.fullwidth
      width: 100%

  button
    margin-top: 1em
    font-size: 140%
    width: 100%

