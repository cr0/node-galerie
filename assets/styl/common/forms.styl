
input, textarea, button
  font: 1em "Helvetica Neue", Arial, sans-serif
  font-weight: 100


label
  font-size: 70%
  font-weight: 200
  width: 25%
  display: inline-block


input, textarea
  color: lighten($text-color, 15)
  width: 75%
  display: inline-block
  font-size: 140%
  background-color: white
  border: 0
  padding: 5px
  transition: background-color 0.6s

  &:hover
    background-color: rgb(206, 227, 242)

  &:focus:not(readonly)
    color: $text-color

  &.missing
    background-color: rgb(246, 220, 221)

  &.fullwidth
    width: 100%

  &.halfwidth
    width: 50%

  &.smallwidth
    width:25%

input[type="checkbox"], input[type="radio"]
  line-height: 0.7
  
  &:after
    content: attr(data-description)
    margin-left: 25px