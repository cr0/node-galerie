    input.smallwidth(id='create-bucket', name='create-bucket', type="checkbox", value='true', data-description='Bucket erstellen')

  div.pair.inline
    input.smallwidth(id='auto-upload', name='auto-upload', type="checkbox", value='true', checked, data-description='Upload im Hintergrund')

form.create-bucket.nonwidth

  div.pair.hint--right.create-bucket(data-hint="Name")
    input.fullwidth(id="name", name='name', required, value='#{name ? name : ''}', placeholder='Name', class="#{missing_name? 'missing' : ''}")

  div.pair.hint--right.create-bucket(data-hint="Beschreibung")
